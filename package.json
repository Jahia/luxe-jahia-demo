{
  "name": "luxe-jahia-demo",
  "version": "0.6.0",
  "license": "MIT",
  "scripts": {
    "build:development": "vite build --mode=development && run pack",
    "build:production": "yarn clean && vite build && run pack",
    "build": "run build:production",
    "pack": "mkdir -p dist/build && cd dist/build && yarn pack --out package.tgz && mv package.tgz ..",
    "clean": "rm -rf dist/",
    "deploy": "jahia-deploy",
    "watch": "yarn clean && vite build --mode=development --watch",
    "lint": "eslint .",
    "test": "yarn lint"
  },
  "jahia": {
    "snapshot": true,
    "required-version": "8.2.0.0-SNAPSHOT",
    "module-type": "templatesSet",
    "module-dependencies": "default,javascript-modules-engine",
    "static-resources": "/javascript,/client,/icons,/images",
    "server": "main.js",
    "maven": {
      "groupId": "org.jahia.modules.javascript",
      "distributionManagement": {
        "repository": {
          "id": "jahia-releases",
          "url": "https://devtools.jahia.com/nexus/content/repositories/jahia-releases"
        },
        "snapshotRepository": {
          "id": "jahia-snapshots",
          "url": "https://devtools.jahia.com/nexus/content/repositories/jahia-snapshots"
        }
      }
    }
  },
  "dependencies": {
    "@jahia/javascript-modules-library": "^0.5.1",
    "bootstrap": "^5.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.16.0",
    "@cyclonedx/webpack-plugin": "^3.12.0",
    "@heroicons/react": "^2.1.1",
    "@jahia/eslint-config": "^2.1.2",
    "@jahia/vite-plugin": "^0.5.1",
    "babel-loader": "^8.2.3",
    "clsx": "^2.1.0",
    "eslint": "^8.43.0",
    "eslint-plugin-jest": "latest",
    "eslint-plugin-react": "latest",
    "eslint-plugin-react-hooks": "latest",
    "extra-watch-webpack-plugin": "^1.0.3",
    "i18next": "23.10.1",
    "react": "19.0.0",
    "react-i18next": "15.4.1",
    "styled-jsx": "^5.1.6",
    "typescript": "^5.7.3",
    "vite": "^6.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=4.0.0"
  },
  "packageManager": "yarn@4.6.0"
}
